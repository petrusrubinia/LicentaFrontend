<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TempFragment"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/background_gradient"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/id_temperatura_actuala"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="100dp"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/id_imagine_temperatura_actuala"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/oval_1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@mipmap/ic_trei" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Temperatura\n actuala"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/id_temperatura_optima"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/id_imagine_temperatura_optima"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/oval_4"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@mipmap/ic_unu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Temperatura\n optima"
                android:textStyle="bold"
                android:textSize="20dp"
                />
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>