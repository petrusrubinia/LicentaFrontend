<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_expired"
    android:orientation="horizontal"
    android:background="@color/theme1_10"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_image_expired"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:background="@drawable/oval_3"
            />
        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp">
            <TextView
                android:id="@+id/title_expired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banane"
                android:textStyle="bold"
                android:textColor="@color/theme1_9"
                android:gravity="center_vertical"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/data_expirare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data expirare: 03-04-2020"
                android:textColor="@color/theme1_9"
                android:gravity="center_vertical"
                />

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/id_stergere_expired"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/theme1_4"
            app:cardCornerRadius="60dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>