<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:orientation="vertical"
        android:background="?attr/loginColor2">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_smart_fridge"
            />
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="?attr/loginColor3"
        android:layout_height="match_parent"
        android:id="@+id/idLogin_fragment">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:textAlignment="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/loginColor1"
                android:text="LOGIN"
                android:textAlignment="center"
                android:padding="20dp"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/idNume"
            android:layout_width="305dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="46dp"
            android:background="@drawable/round_border"
            android:backgroundTint="?attr/cardBackgroundcolor"
            android:drawableLeft="@mipmap/ic_profile"
            android:paddingLeft="5dp"
            android:hint="Nume" />

        <EditText
            android:id="@+id/idParola"
            android:layout_width="305dp"
            android:layout_height="60dp"
            android:layout_below="@+id/idNume"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/round_border"
            android:backgroundTint="?attr/cardBackgroundcolor"
            android:drawableLeft="@mipmap/ic_password"
            android:hint="Parola"
            android:paddingLeft="5dp"
            android:inputType="textPassword" />

        <androidx.cardview.widget.CardView
            android:id="@+id/idLogin"
            android:layout_width="305dp"
            android:layout_height="60dp"
            android:layout_below="@+id/idParola"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="48dp"
            app:cardBackgroundColor="?attr/loginColor1"
            android:onClick="authentication"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/login"
                android:textAlignment="center"
                android:textSize="20dp"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCreate_account"
            app:cardBackgroundColor="?attr/loginColor1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/idLogin"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:onClick="create"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:foreground="?android:attr/selectableItemBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create an account here >>"
                android:textAlignment="center"
                android:textSize="20dp"
                android:padding="20dp"
                />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>