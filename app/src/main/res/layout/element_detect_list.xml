<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_detect"
    android:orientation="horizontal"
    android:background="?attr/cardListColor"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/id_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/oval_2"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/idNume_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Nume: "
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="?attr/textColorDark"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/idCategroie_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Categorie: "
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="?attr/textColorDark"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/idCantitate_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Cantitate: "
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="?attr/textColorDark"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/idTemperatura_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Temperatura: "
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="?attr/textColorDark"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/idDataAchizitionare_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Data achizitionare:"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="?attr/textColorDark"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/idDataExpirare_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Data expirare: "
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="?attr/textColorDark"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/id_edit"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:layout_marginLeft="120dp"
            app:cardBackgroundColor="?attr/editColor"
            app:cardCornerRadius="60dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/id_stergere"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:clickable="true"
            android:layout_marginLeft="30dp"
            app:cardBackgroundColor="?attr/deleteColor"
            app:cardCornerRadius="60dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>